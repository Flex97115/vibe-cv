---
interface Props {
	title: string;
	lang: string;
}

const { title, lang } = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="CV - GÃ©ry Thrasibule" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Outfit:wght@400;500;700&display=swap"
			rel="stylesheet"
		/>
		<!-- Theme initialization script - must run before body renders to avoid flash -->
		<script is:inline>
			(function () {
				// Check localStorage first, then fall back to system preference
				const savedTheme = localStorage.getItem("theme");
				const prefersDark = window.matchMedia(
					"(prefers-color-scheme: dark)",
				).matches;
				const theme = savedTheme || (prefersDark ? "dark" : "light");
				document.documentElement.setAttribute("data-theme", theme);
			})();
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	/* Dark theme (default) */
	:root,
	:root[data-theme="dark"] {
		--color-bg: #0f172a;
		--color-text: #e2e8f0;
		--color-text-muted: #94a3b8;
		--color-primary: #38bdf8;
		--color-secondary: #818cf8;
		--color-accent: #f472b6;
		--color-card-bg: #1e293b;
		--color-border: #334155;
		--color-bg-offset: #0f172a;

		--font-sans: "Inter", sans-serif;
		--font-heading: "Outfit", sans-serif;

		--spacing-sm: 0.5rem;
		--spacing-md: 1rem;
		--spacing-lg: 2rem;
		--spacing-xl: 4rem;

		--radius-sm: 0.375rem;
		--radius-md: 0.75rem;
		--radius-lg: 1rem;
	}

	/* Light theme */
	:root[data-theme="light"] {
		--color-bg: #ffffff;
		--color-text: #0f172a;
		--color-text-muted: #475569;
		--color-primary: #0ea5e9;
		--color-secondary: #6366f1;
		--color-accent: #ec4899;
		--color-card-bg: #f8fafc;
		--color-border: #e2e8f0;
		--color-bg-offset: #f1f5f9;
	}

	html {
		font-family: var(--font-sans);
		background: var(--color-bg);
		color: var(--color-text);
		scroll-behavior: smooth;
		transition:
			background 0.3s ease,
			color 0.3s ease;
	}

	body {
		margin: 0;
		padding: 0;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		font-family: var(--font-heading);
		color: var(--color-text);
		margin: 0 0 var(--spacing-md) 0;
	}

	p {
		line-height: 1.6;
		color: var(--color-text-muted);
		margin-bottom: var(--spacing-md);
	}

	a {
		color: var(--color-primary);
		text-decoration: none;
		transition: color 0.2s ease;
	}

	a:hover {
		color: var(--color-secondary);
	}

	/* Print Styles */
	@media print {
		:root {
			--color-bg: #fff;
			--color-text: #1e293b;
			--color-text-muted: #475569;
			--color-primary: #0f172a;
			--color-secondary: #334155;
			--color-card-bg: #fff;
			--color-border: #cbd5e1;
		}

		html {
			background: #fff;
			font-size: 12px; /* Smaller font for print */
		}

		body {
			display: block;
			padding: 0;
		}

		.no-print {
			display: none !important;
		}

		a {
			text-decoration: none;
			color: var(--color-text);
		}

		/* Ensure links are visible if needed, or hide URL */
		/* a[href^="http"]:after { content: " (" attr(href) ")"; } */
	}
</style>
