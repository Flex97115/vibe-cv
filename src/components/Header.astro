---
interface Props {
  lang: string;
}

const { lang } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, "");

const isFr = lang === "fr";
const homeLink = `${base}/${isFr ? "fr" : "en"}`;
const switchLangLink = `${base}/${isFr ? "en" : "fr"}`;
const skillsLink = `${base}/${lang}/skills`;
const switchLangLabel = isFr ? "EN" : "FR";
---

<header class="header no-print">
  <div class="container">
    <nav>
      <a href={homeLink} class="logo">GT.</a>
      <div class="actions">
        <a href={skillsLink} class="skills-link">
          {lang === "fr" ? "Graphe Comp√©tences" : "Skills Graph"}
        </a>
        <button
          onclick="window.print()"
          class="print-btn"
          aria-label="Print CV"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><polyline points="6 9 6 2 18 2 18 9"></polyline><path
              d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"
            ></path><rect x="6" y="14" width="12" height="8"></rect></svg
          >
          {isFr ? "Imprimer" : "Print"}
        </button>
        <a href={switchLangLink} class="lang-switch">
          {switchLangLabel}
        </a>
      </div>
    </nav>
  </div>
</header>

<style>
  .header {
    padding: var(--spacing-md) 0;
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(15, 23, 42, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.5rem;
    color: #fff;
    letter-spacing: -0.05em;
    background: var(--color-primary);
    padding: 0.25rem 0.5rem;
    border-radius: var(--radius-sm);
    color: var(--color-bg);
  }

  .actions {
    display: flex;
    gap: var(--spacing-md);
    align-items: center;
  }

  .skills-link {
    text-decoration: none;
    color: var(--color-text);
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: var(--radius-sm);
    transition: background-color 0.2s;
  }

  .skills-link:hover {
    background-color: var(--color-bg-offset);
  }

  .print-btn,
  .lang-switch {
    background: transparent;
    border: 1px solid var(--color-border);
    color: var(--color-text);
    padding: 0.5rem 1rem;
    border-radius: var(--radius-sm);
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-sans);
    font-size: 0.875rem;
    transition: all 0.2s;
    text-decoration: none;
    font-weight: 500;
  }

  .btn-print:hover,
  .lang-switch:hover {
    background: var(--color-card-bg);
    border-color: var(--color-primary);
    color: #fff;
  }
</style>
