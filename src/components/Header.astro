---
interface Props {
  lang: string;
}

const { lang } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, "");

const isFr = lang === "fr";
const homeLink = `${base}/${isFr ? "fr" : "en"}`;
const switchLangLink = `${base}/${isFr ? "en" : "fr"}`;
const skillsLink = `${base}/${lang}/skills`;
const switchLangLabel = isFr ? "EN" : "FR";
---

<header class="header no-print">
  <div class="container">
    <nav>
      <div class="left-nav">
        <a href={homeLink} class="logo">GT.</a>
        <a href={skillsLink} class="skills-link">
          {lang === "fr" ? "Graphe Comp√©tences" : "Skills Graph"}
        </a>
      </div>
      <div class="actions">
        <button
          id="theme-toggle"
          class="theme-toggle"
          aria-label="Toggle theme"
        >
          <!-- Sun icon (for light mode) -->
          <svg
            class="sun-icon"
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <circle cx="12" cy="12" r="5"></circle>
            <line x1="12" y1="1" x2="12" y2="3"></line>
            <line x1="12" y1="21" x2="12" y2="23"></line>
            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
            <line x1="1" y1="12" x2="3" y2="12"></line>
            <line x1="21" y1="12" x2="23" y2="12"></line>
            <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
            <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
          </svg>
          <!-- Moon icon (for dark mode) -->
          <svg
            class="moon-icon"
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
          </svg>
        </button>
        <button
          onclick="window.print()"
          class="print-btn"
          aria-label={isFr ? "Imprimer" : "Print"}
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><polyline points="6 9 6 2 18 2 18 9"></polyline><path
              d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"
            ></path><rect x="6" y="14" width="12" height="8"></rect></svg
          >
        </button>
        <a href={switchLangLink} class="lang-switch">
          {switchLangLabel}
        </a>
      </div>
    </nav>
  </div>
</header>

<style>
  .header {
    padding: var(--spacing-md) 0;
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--color-card-bg);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--color-border);
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .left-nav {
    display: flex;
    align-items: center;
    gap: var(--spacing-lg);
  }

  .logo {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.5rem;
    letter-spacing: -0.05em;
    background: var(--color-primary);
    padding: 0.25rem 0.5rem;
    border-radius: var(--radius-sm);
    color: white; /* Always white for contrast on primary color background */
  }

  .actions {
    display: flex;
    gap: var(--spacing-md);
    align-items: center;
  }

  .skills-link {
    text-decoration: none;
    color: var(--color-text);
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: var(--radius-sm);
    transition: background-color 0.2s;
  }

  .skills-link:hover {
    background-color: var(--color-bg-offset);
  }

  .theme-toggle {
    background: transparent;
    border: 1px solid var(--color-border);
    color: var(--color-text);
    padding: 0.5rem;
    border-radius: var(--radius-sm);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
    width: 40px;
    height: 40px;
  }

  .theme-toggle:hover {
    background: var(--color-card-bg);
    border-color: var(--color-primary);
  }

  /* Show/hide icons based on theme */
  [data-theme="dark"] .sun-icon {
    display: block;
  }

  [data-theme="dark"] .moon-icon {
    display: none;
  }

  [data-theme="light"] .sun-icon {
    display: none;
  }

  [data-theme="light"] .moon-icon {
    display: block;
  }

  .print-btn {
    background: transparent;
    border: 1px solid var(--color-border);
    color: var(--color-text);
    padding: 0.5rem;
    border-radius: var(--radius-sm);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
    width: 40px;
    height: 40px;
  }

  .print-btn:hover {
    background: var(--color-card-bg);
    border-color: var(--color-primary);
  }

  .lang-switch {
    background: transparent;
    border: 1px solid var(--color-border);
    color: var(--color-text);
    padding: 0.5rem 1rem;
    border-radius: var(--radius-sm);
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-sans);
    font-size: 0.875rem;
    transition: all 0.2s;
    text-decoration: none;
    font-weight: 500;
  }

  .lang-switch:hover {
    background: var(--color-card-bg);
    border-color: var(--color-primary);
    color: var(--color-text);
  }
</style>

<script is:inline>
  // Theme toggle functionality
  document.addEventListener("DOMContentLoaded", () => {
    const themeToggle = document.getElementById("theme-toggle");

    if (themeToggle) {
      themeToggle.addEventListener("click", () => {
        const currentTheme =
          document.documentElement.getAttribute("data-theme");
        const newTheme = currentTheme === "dark" ? "light" : "dark";

        document.documentElement.setAttribute("data-theme", newTheme);
        localStorage.setItem("theme", newTheme);
      });
    }
  });
</script>
