---
import Section from "./Section.astro";

interface Props {
  education: any[];
  title: string;
}

const { education, title } = Astro.props;
---

<Section title={title}>
  <div class="grid">
    {
      education.map((edu) => (
        <div class="edu-item">
          <div class="header">
            <h3>{edu.institution}</h3>
            <span class="date">{edu.endDate}</span>
          </div>
          <div class="details">
            <span class="area">{edu.area}</span>
            <span class="type">â€¢ {edu.studyType}</span>
          </div>
        </div>
      ))
    }
  </div>
</Section>

<style>
  .grid {
    display: grid;
    gap: var(--spacing-md);
  }

  .edu-item {
    background: var(--color-card-bg);
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
  }

  .header {
    display: flex;
    justify-content: space-between;
    margin-bottom: var(--spacing-sm);
  }

  h3 {
    font-size: 1.1rem;
    margin: 0;
    color: #fff;
  }

  .date {
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .area {
    color: var(--color-primary);
    font-weight: 500;
  }

  .type {
    color: var(--color-text-muted);
  }

  @media print {
    .edu-item {
      background: transparent;
      border: none;
      padding: 0;
      margin-bottom: var(--spacing-sm);
      page-break-inside: avoid;
    }

    h3 {
      color: var(--color-text);
    }
  }
</style>
