---
interface Props {
  basics: any;
}

const { basics } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, ""); // Remove trailing slash
const imagePath = basics.image?.startsWith("http")
  ? basics.image
  : `${base}${basics.image}`;
---

<div class="basics">
  {
    basics.image && (
      <div class="image-container">
        <img src={imagePath} alt={basics.name} class="profile-image" />
      </div>
    )
  }
  <div class="info">
    <h1>{basics.name}</h1>
    <p class="label">{basics.label}</p>
    <p class="summary">{basics.summary}</p>

    <div class="contact">
      {
        basics.email && (
          <a href={`mailto:${basics.email}`} class="item">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <>
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                <polyline points="22,6 12,13 2,6" />
              </>
            </svg>
            {basics.email}
          </a>
        )
      }
      {
        basics.phone && (
          <a href={`tel:${basics.phone}`} class="item">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" />
            </svg>
            {basics.phone}
          </a>
        )
      }
      {
        basics.location && (
          <div class="item">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <>
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
                <circle cx="12" cy="10" r="3" />
              </>
            </svg>
            {basics.location.city}, {basics.location.countryCode}
          </div>
        )
      }
      {
        basics.url && (
          <a
            href={basics.url}
            target="_blank"
            rel="noopener noreferrer"
            class="item"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <>
                <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71" />
                <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71" />
              </>
            </svg>
            Linktree
          </a>
        )
      }
    </div>
  </div>
</div>

<style>
  .basics {
    display: flex;
    align-items: center;
    gap: var(--spacing-xl);
    margin-bottom: var(--spacing-xl);
    animation: fadeIn 0.5s ease-out;
  }

  .image-container {
    flex-shrink: 0;
  }

  .profile-image {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid var(--color-card-bg);
    box-shadow: 0 0 0 2px var(--color-border);
  }

  .info {
    flex: 1;
  }

  h1 {
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: var(--spacing-sm);
    background: linear-gradient(to right, #fff, var(--color-text-muted));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .label {
    font-size: 1.5rem;
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
    font-weight: 500;
  }

  .summary {
    font-size: 1.125rem;
    max-width: 600px;
    margin-bottom: var(--spacing-lg);
  }

  .contact {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-md);
  }

  .item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
    font-size: 0.9rem;
    padding: 0.25rem 0.75rem;
    border: 1px solid var(--color-border);
    border-radius: 100px;
    transition: all 0.2s;
  }

  a.item:hover {
    border-color: var(--color-primary);
    color: #fff;
    background: rgba(56, 189, 248, 0.1);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .basics {
      flex-direction: column;
      text-align: center;
      gap: var(--spacing-md);
    }

    .contact {
      justify-content: center;
    }

    h1 {
      font-size: 2.5rem;
    }
  }

  @media print {
    .basics {
      margin-bottom: var(--spacing-lg);
      gap: var(--spacing-lg);
    }

    .profile-image {
      width: 100px;
      height: 100px;
      border: none;
      box-shadow: none;
    }

    h1 {
      font-size: 2.5rem;
      background: none;
      -webkit-text-fill-color: initial;
      color: var(--color-text);
    }

    .label {
      font-size: 1.25rem;
      color: var(--color-text-muted);
    }

    .item {
      border: none;
      padding: 0;
      color: var(--color-text);
    }
  }
</style>
